      .row
        each val in teams
          .col-lg-6.col-12
            .masonry-item.bg--white
              .masonry-item__header
                if val.avatar
                  a.user-avatar.user-avatar--lg(href="#!")
                    img(src= val.avatar, alt="user avatar")
                else
                  a.avatar.avatar--lg.avatar--circle(href='#!', class=`bg--${val.avatarText.bg}`)= val.avatarText.text

                  h3.summary__title
                    a(href='#!', class='color--light-black')= val.title
                  .summary__subtitle= val.subTitle
                +buttons({
                  type: 'light',
                  iconAfter: 'oi oi-chat'
                })(class= 'button--circle' data-toggle="tooltip" title="Chat with teams")
              .masonry-item__body
                p.masonry-item__intro= val.intro
                hr
                .masonry-item__rating
                  each _, index in Array(5)
                    i.color--yellow(class= (val.star > index) ? "fa fa-star" : "far fa-star")
                ul.masonry-item__location
                  li
                    span.masonry-item__icon

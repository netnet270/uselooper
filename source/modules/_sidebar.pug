//-------------------------------------------------------
//- Modules :: Sidebar
//-------------------------------------------------------
             
mixin sidebar(cat,href)
  aside.aside-sidebar.js-sidebar-collapse
    .aside-sidebar__inner
      .aside-sidebar__header
        .user-profile
          a.user-profile__btn(data-toggle="collapse" role="button" href="#dropdown-aside" aria-controls="dropdown-aside" aria-expanded="false")
            span.user-avatar.user-avatar--lg
              img(src='images/profile.jpg' alt='user-avatar')
            span.user-profile__icon
              i(class= "fa fa-caret-down fa-lg")
            span.user-profile__summary
              span.user-profile__name
                | Beni Arisandi
              span.user-profile__position
                | Marketing Manager

          .user-profile__setting.collapse#dropdown-aside
            -
              var data = [
                {
                  text: 'Profile',
                  href: 'ue-02-user-profile.html',
                  icon: 'oi oi-person'
                },
                {
                  text: 'Logout',
                  icon: 'oi oi-account-logout'
                },
                {
                  divider: true
                },
                {
                  text: 'Help Center'
                },
                {
                  text: 'Ask Forum'
                },
                {
                  text: 'Keyboard Shortcuts'
                }
              ]

            each item in data
              if item.divider
                .setting-divider
              else
                a.setting-item(href= item.href ? item.href : '#!')
                  if item.icon
                    span.setting-item__icon(class= item.icon)
                  | #{item.text}
      .aside-sidebar__menu#menu-sidebar.js-scrollbar-menu
        +main-menu(cat,href)
        +sub-menu()
      .aside-sidebar__footer
        +buttons({
          text: 'Night mode',
          iconAfter: 'fas fa-moon',
          type: 'infor',
          isFull: true
        })

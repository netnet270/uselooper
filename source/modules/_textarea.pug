//- Textarea
mixin textarea({ label, id, required, badge, text, placeholder, row })
  .form-group&attributes(attributes)
    label(
      for= id ? id : null
      class= text ? 'd-flex justify-content-between' : null
    )= label
      if required
        abbr(title="Required")*
      if badge
        span.badge(
          class= (badge == "Required") ? 'badge-danger' : 'badge-secondary'
        )= badge
      if text
        span.text-muted= text
    textarea.form-control(
      placeholder= placeholder ? placeholder : null
      id= id ? id : null
      row= row ? row : null
    )

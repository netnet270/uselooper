h3 Input size
-
  var InputSizes = [
    { size: 'small' },
    { size: 'medium' },
    { size: 'large' }
  ];

.row
  each val, index in InputSizes
    .col-lg-4.col-12
      .code-example
        .demo
          form.form-custom
            +group-input-field-base({
              label: 'Label',
              id: `input${index}`,
              size: val.size,
              placeholder:'e.g. johndoe@looper.com'
            })
        pre
          code
            |form.form-custom
            |   +group-input-field-base({
            |     label: 'Label',
            |     id: 'input#{index}',
            |     size: '#{val.size}'
            |     placeholder: 'e.g. johndoe@looper.com'
            |   })

